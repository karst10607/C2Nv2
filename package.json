{
  "name": "notion-importer",
  "version": "3.1.2",
  "description": "Import Confluence HTML exports into Notion",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:py": "bash scripts/build_py.sh",
    "fetch:tools": "bash scripts/fetch_tools.sh",
    "build:mac": "npm run fetch:tools && npm run build:py && electron-builder --mac",
    "build:linux": "npm run fetch:tools && electron-builder --linux"
  },
  "keywords": ["notion", "confluence", "importer"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "build": {
    "appId": "com.notionimporter.app",
    "productName": "Notion Importer",
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "python_dist",
        "to": "python_dist",
        "filter": ["**/*"]
      },
      {
        "from": "bundled_tools",
        "to": "bundled_tools",
        "filter": ["cloudflared-*"]
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": ["dmg"]
    },
    "linux": {
      "category": "Utility",
      "target": ["AppImage", "deb"]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
